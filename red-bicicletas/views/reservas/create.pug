extends ../layout

block content
    section#Contenido
      .container
        .row
            .col-lg-12.text-center
                h2  Nueva Reserva
                hr.star-primary                
            .row
            .col-lg-12
                a.btn.btn-primary(href='/reservas') Listar reservas
                hr
                form(action='/reservas/create' method='post')        
                    //- .form-group
                    //-     label(for='code') Identificador
                    //-     input#code.form-control(type='text' name='code')
                    //- .form-group
                    //-     label(for='color') Color
                    //-     input#color.form-control(type='text' name='color')
                    //- .form-group
                    //-     label(for='modelo') Modelo
                    //-     input#modelo.form-control(type='text' name='modelo')
                    //- .form-group
                    //-     label(for='lat') Latitud
                    //-     input#lat.form-control(type='text' name='lat')
                    //- .form-group
                    //-     label(for='lon') Longitud
                    //-     input#lon.form-control(type='text' name='lon')

                    .row.control-group
                        .form-group.col-xs-12.floating-label-form-group.controls
                            label(for='userId') Usuario
                            br          
                            select#userId.form-control(name='userId' required='')
                                option(value = "") Seleccione un usuario
                                each user in usuarios
                                    option(value = user._id) 
                                        =user.nombre                                
                            p.help-block.text-danger
                    .row.control-group
                        .form-group.col-xs-12.floating-label-form-group.controls
                            label(for='biciId') Bicicleta
                            br          
                            select#biciId.form-control(name='biciId' required='')
                                option(value = "") Seleccione una bicicleta
                                each bici in bicicletas
                                    option(value = bici._id) 
                                        =bici.modelo
                            p.help-block.text-danger
                    .row.control-group
                        .form-group.col-xs-12.floating-label-form-group.controls
                            label(for='desde') Desde
                            input#desde.form-control(name='desde' type='date' placeholder='Desde' required='')
                            p.help-block.text-danger
                    .row.control-group
                        .form-group.col-xs-12.floating-label-form-group.controls
                            label(for='hasta') Hasta
                            input#hasta.form-control(name='hasta' type='date' placeholder='Hasta' required='')
                            p.help-block.text-danger
                    br
                    #success
                    .row
                        .form-group.col-xs-12
                        button.btn.btn-success.btn-lg(type='submit') Guardar
                        