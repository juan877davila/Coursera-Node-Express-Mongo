extends ../layout

block content
    section#Contenido
      .container
        .row
            .col-lg-12.text-center
                h2  Editar Reserva
                hr.star-primary                
            .row
            .col-lg-12                
                a.btn.btn-primary(href='/reservas') Listar reservas
                hr
                form(action=`/reservas/update/${reserva._id}` method='post')
                    //- .form-group
                    //-     label(for='code') Identificador
                    //-     input#code.form-control(type='text' name='code' value=bici.code)
                    //- .form-group
                    //-     label(for='color') Color
                    //-     input#color.form-control(type='text' name='color' value=bici.color)
                    //- .form-group
                    //-     label(for='modelo') Modelo
                    //-     input#modelo.form-control(type='text' name='modelo' value=bici.modelo)
                    //- .form-group
                    //-     label(for='lat') Latitud
                    //-     input#lat.form-control(type='text' name='lat' value=bici.ubicacion[0])
                    //- .form-group
                    //-     label(for='lon') Longitud
                    //-     input#lon.form-control(type='text' name='lon' value=bici.ubicacion[1])
                    //- button.btn.btn-success(type='submit') Guardar
                    .row.control-group
                        .form-group.col-xs-12.floating-label-form-group.controls
                            label(for='userId') Usuario
                            br          
                            select#userId.form-control(name='userId' required='' value= reserva.usuario._id)
                                option(value = "") Seleccione un usuario
                                each user in usuarios
                                    option(value = user._id) 
                                        =user.nombre                                
                            p.help-block.text-danger
                    .row.control-group
                        .form-group.col-xs-12.floating-label-form-group.controls
                            label(for='biciId') Bicicleta
                            br          
                            select#biciId.form-control(name='biciId' required='' value= reserva.bicicleta._id)
                                option(value = "") Seleccione una bicicleta
                                each bici in bicicletas
                                    option(value = bici._id) 
                                        =bici.modelo
                            p.help-block.text-danger
                    .row.control-group
                        .form-group.col-xs-12.floating-label-form-group.controls
                            label(for='desde') Desde
                            input#desde.form-control(name='desde' type='date' placeholder='Desde' required='' value= reserva.desde)
                            p.help-block.text-danger
                    .row.control-group
                        .form-group.col-xs-12.floating-label-form-group.controls
                            label(for='hasta') Hasta
                            input#hasta.form-control(name='hasta' type='date' placeholder='Hasta' required='' value= reserva.hasta)
                            p.help-block.text-danger
                    br
                    #success
                    .row
                        .form-group.col-xs-12
                        button.btn.btn-success.btn-lg(type='submit') Guardar