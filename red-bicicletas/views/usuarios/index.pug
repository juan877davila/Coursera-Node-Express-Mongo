extends ../layout

block content
    a.btn.btn-success(href='/users/create') Nuevo usuario

    br
    br

    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Nombre
                th(scope='col') E-mail
                th(scope='col') Verificado
                th(scope='col') 
                th(scope='col') 
        tbodoy
            each usuario in usuarios
                tr
                    td(scope='row')
                        = usuario._id
                    td= usuario.nombre
                    td= usuario.email
                    td= usuario.verificado ? 'Si' : 'No'
                    td
                        a.btn(href='users/' + usuario.id + '/update') Editar
                    td
                        form.inline(method='post' action='users/' + usuario.id + '/delete')
                            input(type='hidden' name='id' value=usuario.id)
                            button.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                                = 'Eliminar'